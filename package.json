{
  "name": "kikoeru",
  "version": "<version>",
  "description": "Web media player, specifically for voice works.",
  "main": "src/server/index.jsx",
  "scripts": {
    "build": "webpack --mode production",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "profile": "webpack --mode production --profile --json > webpack-stats.json",
    "scan": "node ./src/server/filesystem/scanner.js",
    "lint": "eslint --ignore-path .gitignore --fix ./**/*.js"
  },
  "author": "nortonandrews",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@supercharge/promise-pool": "^2.4.0",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "htmlparser2": "^8.0.2",
    "knex": "^2.4.2",
    "memorystore": "^1.6.7",
    "natural-orderby": "^3.0.2",
    "node-fetch": "^2.6.9",
    "recursive-readdir": "^2.2.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-jsx": "^7.21.4",
    "@babel/preset-env": "^7.21.5",
    "@reduxjs/toolkit": "^1.9.5",
    "babel-loader": "^9.1.2",
    "babel-plugin-inferno": "^6.6.0",
    "babel-polyfill": "^6.26.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "eslint": "^8.40.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "file-loader": "^6.2.0",
    "history": "^5.3.0",
    "html-webpack-plugin": "^5.5.1",
    "inferno": "^8",
    "inferno-component": "^7",
    "inferno-create-element": "^8",
    "inferno-redux": "^8.1.1",
    "inferno-router": "^8",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "mini-css-extract-plugin": "^2.7.5",
    "nodemon": "^2.0.22",
    "redux": "^4.2.1",
    "style-loader": "^3.3.2",
    "uikit": "^3.16.17",
    "url-loader": "^4.1.1",
    "webpack": "^5.82.0",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": [
                "kikoeru.tar.gz",
                "kikoeru.zip"
              ]
            }
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i 's/<version>/${nextRelease.version}/' package.json && npm run build && tar -czf kikoeru.tar.gz dist static package.json package-lock.json && zip kikoeru.zip dist static package.json package-lock.json"
        }
      ]
    ]
  }
}
